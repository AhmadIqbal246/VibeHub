# Docker Environment Configuration Template
# Copy this to .env.docker.local and update values for your deployment

# Django Configuration
SECRET_KEY=your-super-secure-secret-key-here
DEBUG=False

# Database Configuration (Docker containers)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=chat_app
DB_USER=ahmad1
DB_PASSWORD=your-secure-db-password
DB_HOST=db
DB_PORT=5432

# Application URLs (for Docker networking)
BASE_API_URL=http://backend:8000
BASE_APP_URL=http://frontend:5173

# Google OAuth2 Configuration
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Redis Configuration (Docker containers)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Docker Compose Configuration
POSTGRES_DB=chat_app
POSTGRES_USER=ahmad1
POSTGRES_PASSWORD=your-secure-db-password

# Production Settings
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-domain.com
CSRF_TRUSTED_ORIGINS=http://localhost:5173,https://your-domain.com
